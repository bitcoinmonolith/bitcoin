{
	"imports": {
		"@noble/curves": "jsr:@noble/curves@^1.9.0",
		"@noble/hashes": "jsr:@noble/hashes@^1.8.0",
		"@noble/secp256k1": "jsr:@noble/secp256k1@^2.3.0",
		"@nomadshiba/struct-js": "jsr:@nomadshiba/struct-js@^0.3.4",
		"@soapbox/kysely-deno-sqlite": "jsr:@soapbox/kysely-deno-sqlite@^2.2.0",
		"@std/async": "jsr:@std/async@^1.0.14",
		"@std/bytes": "jsr:@std/bytes@^1.0.6",
		"@std/encoding": "jsr:@std/encoding@^1.0.10",
		"@std/path": "jsr:@std/path@^1.1.2",
		"@deno/sqlite": "https://deno.land/x/sqlite@v3.9.1/mod.ts",
		"kysely": "npm:kysely@^0.27.6",
		"~/": "./app/"
	},
	"tasks": {
		"cache": "deno cache .",
		"start": "deno run -A ./app/start.ts"
	},
	"unstable": ["raw-imports"],
	"compilerOptions": {
		"lib": ["deno.ns", "deno.window", "es2024"],
		"strict": true,
		"noUncheckedIndexedAccess": true
	},
	"fmt": {
		"lineWidth": 120,
		"indentWidth": 4,
		"useTabs": true
	},
	"lint": {
		"rules": {
			"exclude": ["no-namespace", "no-explicit-any"],
			"include": ["no-slow-types"]
		}
	}
}
