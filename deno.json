{
	"imports": {
		"@noble/curves": "jsr:@noble/curves@^1.9.0",
		"@noble/hashes": "jsr:@noble/hashes@^1.8.0",
		"@noble/secp256k1": "jsr:@noble/secp256k1@^2.3.0",
		"@nomadshiba/struct-js": "jsr:@nomadshiba/struct-js@^0.2.0",
		"kysely": "npm:kysely@^0.28.2",
		"~/": "./app/"
	},
	"tasks": {
		"cache": "deno cache .",
		"start": "deno run -A ./app/start.ts"
	},
	"unstable": ["raw-imports"],
	"compilerOptions": {
		"lib": ["deno.ns", "deno.window", "es2024"],
		"strict": true,
		"noUncheckedIndexedAccess": true
	},
	"fmt": {
		"lineWidth": 120,
		"indentWidth": 4,
		"useTabs": true
	},
	"lint": {
		"rules": {
			"exclude": ["no-namespace"]
		}
	}
}
